[user]
  name = Yoshimasa Niwa
  email = niw@niw.at

[alias]
  ci = commit
  co = checkout
  st = status
  br = branch
  sm = submodule
  gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
  d = diff -w
  # https://gist.github.com/goaway/82bc47bbe1b0795937df
  hide = !f() { git ls-files -m "$@" | xargs -I{} git update-index --assume-unchanged {}\n}\n f;
  hidden = !f() { git ls-files -v "$@" | grep "^[[:lower:]]" | cut -c3-\n}\n f;
  unhide = !f() { git hidden "$@" | xargs -I{} git update-index --no-assume-unchanged {}\n}\n f;

[color]
  diff = auto
  status = auto
  branch = auto

[diff]
  algorithm = histogram

[mergetool]
  keepBackup = true

[http]
  # Increase HTTP post buffer to 100 MB
  postBuffer = 104857600

# NOTE Use `git config --system credential.helper osxkeychain` to set credential helper
# for system wide, not --global, since credential storage is per system.
#[credential]
#  helper = osxkeychain

# tig Configurations
# See man tigrc(5).
[tig]
  #line-graphics = ascii
  tab-size = 4
[tig "bind"]
  # Disable default G mapping to git gc.
  generic = G none
  # Keybindings like vim.
  generic = g move-first-line
  generic = G move-last-line
  generic = ^b move-page-up
  generic = ^f move-page-down
[tig "color"]
  cursor = default black
  date = white default
  title-focus = white black
  title-blur = black white
